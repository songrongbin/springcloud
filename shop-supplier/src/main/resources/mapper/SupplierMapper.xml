<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bins.springcloud.shop.supplier.mapper.SupplierMapper">
    
    <resultMap id="BaseResultMap" type="com.bins.springcloud.shop.supplier.entity.SupplierEntity" >
   		<id column="id" property="id" jdbcType="BIGINT"/>
        <result column="supplier_code" property="supplierCode" jdbcType="VARCHAR"/>
        <result column="supplier_name" property="supplierName" jdbcType="VARCHAR"/>
        <result column="pic_url" property="picUrl" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="sort" property="sort" jdbcType="INTEGER"/>
        <result column="is_del" property="isDel" jdbcType="INTEGER"/>
        <result column="create_by" property="createBy" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>    
    </resultMap>
    
    <select id="findSupplierList" resultMap="BaseResultMap">
        select * from t_supplier where is_del = 0
    </select>
    
    <select id="findById" resultMap="BaseResultMap" parameterType="Long">
        select * from t_supplier where id = #{id}
    </select>
    
    <insert id="insertSupplier" parameterType="com.bins.springcloud.shop.supplier.dto.SupplierDto">
    	INSERT INTO `t_supplier` (supplier_code, supplier_name, pic_url, status, sort, is_del, create_by) VALUES 
    	(#{supplierCode}, #{supplierName}, #{picUrl}, #{status}, #{sort}, #{isDel}, #{createBy})
    </insert>
    
    <update id="updateSupplier" parameterType="com.bins.springcloud.shop.supplier.dto.SupplierDto">
    	update `t_supplie` set supplie_code = #{supplieCode}, supplie_name = #{supplieName},
    	pic_url = #{picUrl}, status = #{status}, sort = #{sort}, is_del =  #{isDel} where id = #{id}
    </update>
    
    <select id="getSupplierByIds" parameterType="Long" resultMap="BaseResultMap">
        select * from t_supplier where is_del = 0 and id in
	      <foreach collection="list" separator="," open="(" close=")" item="id">
	       #{id}
	      </foreach>
    </select>
    
    <update id="deleteSupplier" parameterType="com.bins.springcloud.shop.supplier.dto.SupplierDto">
    	update `t_supplier` set is_del = 1 where id = #{id}
    </update>

</mapper>