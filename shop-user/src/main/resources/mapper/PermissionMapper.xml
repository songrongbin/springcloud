<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bins.springcloud.shop.user.mapper.PermissionMapper">
    
    <resultMap id="BaseResultMap" type="com.bins.springcloud.shop.user.entity.PermissionEntity" >
   		<id column="id" property="id" jdbcType="BIGINT"/>
        <result column="permission_code" property="permissionCode" jdbcType="VARCHAR"/>
        <result column="permission_name" property="permissionName" jdbcType="VARCHAR"/>
        <result column="permission_type" property="permissionType" jdbcType="INTEGER"/>
        <result column="url" property="url" jdbcType="VARCHAR" />
        <result column="pid" property="pid" jdbcType="BIGINT" />
        <result column="level" property="level" jdbcType="INTEGER"/>
        <result column="sort" property="sort" jdbcType="INTEGER"/>
        <result column="operator_id" property="operatorId" jdbcType="BIGINT"/>
        <result column="is_del" property="isDel" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>    
    </resultMap>
    
    <select id="findPermissionList" resultMap="BaseResultMap">
        select * from t_permission where id != pid or permission_type != 0 or level != 0
    </select>
    
    <select id="getByModuelAndMenu" resultMap="BaseResultMap">
        select * from t_permission where permission_type = 0 or permission_type = 1 or permission_type = 2 
    </select>
    
    <select id="findById" resultMap="BaseResultMap" parameterType="Long">
        select * from t_permission where id = #{id}
    </select>
    
    <insert id="insertPermission" parameterType="com.bins.springcloud.shop.user.dto.PermissionDto">
    	INSERT INTO `t_permission` (permission_code, permission_name, url, permission_type, sort, level, pid, operator_id) VALUES 
    	(#{permissionCode}, #{permissionName}, #{url}, #{permissionType}, #{sort}, #{level}, #{pid}, #{operatorId})
    </insert>
    
    <update id="updatePermission" parameterType="com.bins.springcloud.shop.user.dto.PermissionDto">
    	update `t_permission` set permission_code = #{permissionCode}, permission_name = #{permissionName},
    	permission_type = #{permissionType}, url = #{url}, sort =  #{sort}, level = #{level},
    	pid = #{pid}, operator_id = #{operatorId} where id = #{id}
    </update>
    
   <insert id="insertRolePermission" parameterType="map">
        INSERT INTO `t_role_permission` (role_id, permission_id) VALUES
            (#{roleId}, #{permissionId})
    </insert>

</mapper>