<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bins.springcloud.shop.user.mapper.UserGroupMapper">
    
    <resultMap id="BaseResultMap" type="com.bins.springcloud.shop.user.entity.UserGroupEntity" >
   		<id column="id" property="id" jdbcType="BIGINT"/>
        <result column="group_name" property="groupName" jdbcType="VARCHAR"/>
        <result column="is_del" property="isDel" jdbcType="INTEGER"/>
        <result column="create_by" property="createBy" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <select id="findList" resultMap="BaseResultMap">
        select * from t_user_group where is_del = 0
    </select>
    
    <select id="findById" resultMap="BaseResultMap" parameterType="Long">
        select * from t_user_group where id = #{id}
    </select>
    
    <insert id="insert" parameterType="com.bins.springcloud.shop.user.dto.UserGroupDto">
    	INSERT INTO `t_user_group` (group_name, is_del, create_by) VALUES 
    	(#{groupName}, #{isDel}, #{createBy})
    </insert>
    
    <update id="update" parameterType="com.bins.springcloud.shop.user.dto.UserGroupDto">
    	update `t_user_group` set group_name = #{groupName},
    	is_del =  #{isDel} where id = #{id}
    </update>
    
    <update id="deleteUserGroup" parameterType="com.bins.springcloud.shop.user.dto.UserGroupDto">
    	update `t_user_group` set is_del = 1 where id = #{id}
    </update>
    
    <select id="getUserGroupByIds" parameterType="Long" resultMap="BaseResultMap">
        select * from t_user_group where is_del = 0 and id in
	      <foreach collection="list" separator="," open="(" close=")" item="id">
	       #{id}
	      </foreach>
    </select>

</mapper>